{
  "name": "abeone-backend",
  "version": "1.0.0",
  "description": "AbëONE - Backend Core Engine × Guardian System × ONE",
  "main": "dist/index.js",
  "scripts": {
    "create-stripe-products": "node scripts/create-stripe-products.js",
    "dev": "NODE_ENV=development sh -c 'if [ \"$ORCHESTRATED\" = \"true\" ]; then tsx src/index.ts; else tsx watch src/index.ts; fi'",
    "build": "tsc",
    "vercel-build": "echo 'Vercel build - TypeScript compiled by Vercel runtime'",
    "start": "NODE_ENV=production node dist/index.js",
    "start:dev": "NODE_ENV=development npx tsx src/index.ts",
    "mcp:stdio": "tsx src/mcp-stdio-server.ts",
    "mcp:stdio:prod": "node dist/mcp-stdio-server.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "audit": "npm audit --audit-level=moderate",
    "abekeys:init": "tsx scripts/abekeys-init.ts",
    "abekeys": "tsx src/utils/abekeys-cli.ts"
  },
  "keywords": [
    "abeone",
    "guardian",
    "swarm",
    "convergence",
    "bravetto"
  ],
  "author": "AbëONE",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@sendgrid/mail": "^8.1.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^168.0.0",
    "openai": "^6.10.0",
    "resend": "^6.6.0",
    "stripe": "^14.25.0",
    "twilio": "^5.3.5",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.26",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vercel/node": "^5.5.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^8.55.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  }
}
